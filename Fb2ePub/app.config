<?xml version="1.0"?>
<configuration>
  <configSections>
        <sectionGroup name="applicationSettings" type="System.Configuration.ApplicationSettingsGroup, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
            <section name="Fb2ePub.Default" type="System.Configuration.ClientSettingsSection, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false"/>
        </sectionGroup>
    <!-- Register a section handler for the log4net section -->
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
    <sectionGroup name="userSettings" type="System.Configuration.UserSettingsGroup, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
      <section name="Fb2epubSettings.Fb2Epub" type="System.Configuration.ClientSettingsSection, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" allowExeDefinition="MachineToLocalUser" requirePermission="false"/>
    </sectionGroup>
  </configSections>
  <log4net>
    <!-- Define some output appenders -->
    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="%property{LogName}/fb2epub.log"/>
      <appendToFile value="true"/>
      <maxSizeRollBackups value="10"/>
      <maximumFileSize value="102400"/>
      <rollingStyle value="Composite"/>
      <encoding value="UTF-8"/>
      <staticLogFileName value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline"/>
      </layout>
    </appender>
    <appender name="TraceAppender" type="log4net.Appender.TraceAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline"/>
      </layout>
    </appender>
    <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%message%newline"/>
      </layout>
      <mapping>
        <level value="ERROR"/>
        <foreColor value="White"/>
        <backColor value="Red, HighIntensity"/>
      </mapping>
      <mapping>
        <level value="DEBUG"/>
        <backColor value="Green"/>
      </mapping>
      <mapping>
        <level value="INFO"/>
        <foreColor value="White"/>
      </mapping>
    </appender>
    <root>
      <level value="INFO"/>
      <appender-ref ref="RollingLogFileAppender"/>
      <appender-ref ref="ColoredConsoleAppender"/>
      <appender-ref ref="TraceAppender"/>
    </root>
  </log4net>
  <userSettings>
    <Fb2epubSettings.Fb2Epub>
      <setting name="Transliterate" serializeAs="String">
        <value>False</value>
      </setting>
      <setting name="TransliterateFileName" serializeAs="String">
        <value>False</value>
      </setting>
      <setting name="FB2Info" serializeAs="String">
        <value>True</value>
      </setting>
      <setting name="FixMode" serializeAs="String">
        <value>2</value>
      </setting>
      <setting name="AddSequences" serializeAs="String">
        <value>True</value>
      </setting>
      <setting name="TransliterateTOC" serializeAs="String">
        <value>False</value>
      </setting>
      <setting name="FlatStructure" serializeAs="String">
        <value>False</value>
      </setting>
      <setting name="ConvertAlphaPNG" serializeAs="String">
        <value>True</value>
      </setting>
      <setting name="EmbedStyles" serializeAs="String">
        <value>False</value>
      </setting>
      <setting name="Fonts" serializeAs="Xml">
        <value>
          <Fonts xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
            <Font generic_family="" style="normal" font-variant="" font-weight="400">
              <Destinations type="Embedded">
                <Path>%ResourceFolder%\Fonts/LiberationSerif-Regular.ttf</Path>
              </Destinations>
              <decorate>true</decorate>
              <CSSTargets>body</CSSTargets>
              <CSSTargets>.epub</CSSTargets>
            </Font>
            <Font generic_family="" style="italic" font-variant="" font-weight="400">
              <Destinations type="Embedded">
                <Path>%ResourceFolder%\Fonts/LiberationSerif-Italic.ttf</Path>
              </Destinations>
              <decorate>true</decorate>
              <CSSTargets>body</CSSTargets>
              <CSSTargets>.epub</CSSTargets>
            </Font>
            <Font generic_family="" style="normal" font-variant="" font-weight="700">
              <Destinations type="Embedded">
                <Path>%ResourceFolder%\Fonts/LiberationSerif-Bold.ttf</Path>
              </Destinations>
              <decorate>true</decorate>
              <CSSTargets>body</CSSTargets>
              <CSSTargets>.epub</CSSTargets>
            </Font>
            <Font generic_family="" style="italic" font-variant="" font-weight="700">
              <Destinations type="Embedded">
                <Path>%ResourceFolder%\Fonts/LiberationSerif-BoldItalic.ttf</Path>
              </Destinations>
              <decorate>true</decorate>
              <CSSTargets>body</CSSTargets>
              <CSSTargets>.epub</CSSTargets>
            </Font>
            <Font generic_family="" style="italic" font-variant="" font-weight="">
              <Destinations type="Embedded">
                <Path>%ResourceFolder%\Fonts/LiberationSerif-Italic.ttf</Path>
              </Destinations>
              <decorate>true</decorate>
              <CSSTargets>code</CSSTargets>
            </Font>
          </Fonts>
        </value>
      </setting>
      <setting name="SequenceFormat" serializeAs="String">
        <value>%bt% %sa.l%-%sn%</value>
      </setting>
      <setting name="NoSequenceFormat" serializeAs="String">
        <value>%bt% (%sf.l%)</value>
      </setting>
      <setting name="NoSeriesFormat" serializeAs="String">
        <value>%bt%</value>
      </setting>
      <setting name="AuthorFormat" serializeAs="String">
        <value>%f.c%%m.c%%l.c%%n.c:b%</value>
      </setting>
      <setting name="FileAsFormat" serializeAs="String">
        <value>%l.c%f.c</value>
      </setting>
      <setting name="Capitalize" serializeAs="String">
        <value>True</value>
      </setting>
      <setting name="SkipAboutPage" serializeAs="String">
        <value>False</value>
      </setting>
    </Fb2epubSettings.Fb2Epub>
</userSettings>
<startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/></startup></configuration>
